<h1> New Repair </h1>


<%= form_for @repair do |f|%>
    <%= f.label :car_model %>
    <%= f.collection_select :car_model, @repair, :id, :name %>
    <%= f.label :repair_type %>
    <%= f.collection_select :repair_type, @repair, :id, :name %>
    <%= submit_tag "Submit Post" %>
  <% end %>




  create_table "repairs", force: :cascade do |t|
    t.string "car_model"
    t.string "repair_type"
    t.integer "avg_cost"
    t.integer "avg_time"
    t.integer "user_id"
    t.integer "dealership_id"
    

